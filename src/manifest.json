{
	"name": "PCPM",
	"version": "0.0.1",
	"description": "A Package Manager Extension for PlayCanvas",
	"manifest_version": 3,
	"icons": { 
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png" 
	},
	"action": {
		"default_icon": { 
			"16": "icon-16.png",
			"48": "icon-48.png",
			"128": "icon-128.png" 
		}
	},
    "permissions": [
        "tabs",
		"storage"
    ],
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; default-src 'self'"
	},
	"background": {
		"service_worker": "serviceworkers.js"
	},
	"content_scripts": [{
		"matches": ["https://playcanvas.com/editor/scene/*", "https://playcanvas.com/editor/code/*"],
        "run_at": "document_idle",
		"js": ["contentscripts.js"]
	}],
    "web_accessible_resources": [{
		"resources": [ "ipcpm.js", "codeeditor/editor.js", "compiler.wasm" ],
		"matches": [ "https://*/*" ]
	}]
}